<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="app.AgentController"
            style="-fx-background-color: linear-gradient(to bottom right, #f2f2f2, #e0e0e0);">
    <children>
        <VBox spacing="10" layoutX="14" layoutY="14" prefWidth="420" prefHeight="420">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Header -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Agent Controls" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Region HBox.hgrow="ALWAYS"/>
                 <Button text="Name" onAction="#onShowName"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
                <Button text="Container" onAction="#onShowContainer"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
                <Button text="Kill" onAction="#onKill"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="10">
                <Button text="Transfer" onAction="#onTransfetAgent"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
                <Button text="Clone" onAction="#onCloneAgent"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
                <Button text="Send Message" onAction="#onSendMessage"
                        style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
                <Button text="Broadcast" onAction="#onBroadcastMessage"
                        style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
            </HBox>

            <!-- Utilities -->
            <HBox spacing="10">
                <Label text="Agent Log:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #444;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Clear" onAction="#onCleanLog"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
            </HBox>

            <!-- Log Area -->
            <TextFlow fx:id="logArea" prefWidth="380" prefHeight="400"
                      style="-fx-control-inner-background: #fdfdfd; -fx-border-color: #ccc; -fx-border-radius: 6;"/>
        </VBox>
    </children>
</AnchorPane>
